@model IEnumerable<ProgettoSettimanaleS6L5.Models.Prenotazione>

@{
    ViewData["Title"] = "Elenco Prenotazioni";
}

<h1>Elenco Prenotazioni</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Nuova Prenotazione</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Camera</th>
            <th>@Html.DisplayNameFor(model => model.First().DataInizio)</th>
            <th>@Html.DisplayNameFor(model => model.First().DataFine)</th>
            <th>@Html.DisplayNameFor(model => model.First().Stato)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Cliente.Nome @item.Cliente.Cognome</td>
                <td>@item.Camera.Numero</td>
                <td>@Html.DisplayFor(modelItem => item.DataInizio)</td>
                <td>@Html.DisplayFor(modelItem => item.DataFine)</td>
                <td>@Html.DisplayFor(modelItem => item.Stato)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PrenotazioneId">Modifica</a> |
                    <a asp-action="Delete" asp-route-id="@item.PrenotazioneId">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>