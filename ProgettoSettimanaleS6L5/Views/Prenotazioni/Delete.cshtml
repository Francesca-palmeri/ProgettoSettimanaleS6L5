@model ProgettoSettimanaleS6L5.Models.Prenotazione

@{
    ViewData["Title"] = "Elimina Prenotazione";
}

<h1>Elimina Prenotazione</h1>

<h3>Sei sicuro di voler eliminare questa prenotazione?</h3>

<div>
    <h4>Prenotazione</h4>
    <dl class="row">
        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.Cliente.Nome @Model.Cliente.Cognome</dd>
        <dt class="col-sm-2">Camera</dt>
        <dd class="col-sm-10">@Model.Camera.Numero</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DataInizio)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DataInizio)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DataFine)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DataFine)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Stato)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Stato)</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="PrenotazioneId" />
        <input type="submit" value="Elimina" class="btn btn-danger" /> |
        <a asp-action="Index">Indietro</a>
    </form>
</div>