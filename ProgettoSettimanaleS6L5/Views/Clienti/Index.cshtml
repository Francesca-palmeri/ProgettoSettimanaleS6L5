@model IEnumerable<ProgettoSettimanaleS6L5.Models.Cliente>

@{
    ViewData["Title"] = "Elenco Clienti";
}

<h1>Elenco Clienti</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Nuovo Cliente</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Nome)</th>
            <th>@Html.DisplayNameFor(model => model.First().Cognome)</th>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.First().Telefono)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Cognome)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ClienteId">Modifica</a> |
                    <a asp-action="Delete" asp-route-id="@item.ClienteId">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>