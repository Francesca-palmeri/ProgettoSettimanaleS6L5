@model ProgettoSettimanaleS6L5.Models.Cliente

@{
    ViewData["Title"] = "Elimina Cliente";
}

<h1>Elimina Cliente</h1>

<h3>Sei sicuro di voler eliminare questo cliente?</h3>

<div>
    <h4>Cliente</h4>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nome)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Cognome)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Cognome)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Telefono)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Telefono)</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="ClienteId" />
        <input type="submit" value="Elimina" class="btn btn-danger" /> |
        <a asp-action="Index">Indietro</a>
    </form>
</div>